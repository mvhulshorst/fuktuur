{% extends 'base.html.twig' %}

{% block title %}Factuur index{% endblock %}

{% block body %}
    <h1>Factuur index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Factuurnummer</th>
                <th>Factuurdatum</th>
                <th>Vervaldatum</th>
                <th>Inzakeopdracht</th>
                <th>Korting</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for factuur in factuurs %}
            <tr>
                <td>{{ factuur.id }}</td>
                <td>{{ factuur.factuurnummer }}</td>
                <td>{{ factuur.factuurdatum ? factuur.factuurdatum|date('Y-m-d H:i:s T') : '' }}</td>
                <td>{{ factuur.vervaldatum ? factuur.vervaldatum|date('Y-m-d H:i:s T') : '' }}</td>
                <td>{{ factuur.inzakeopdracht }}</td>
                <td>{{ factuur.korting }}</td>
                <td>
                    <a href="{{ path('factuur_show', {'id': factuur.id}) }}">show</a>
                    <a href="{{ path('factuur_edit', {'id': factuur.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('factuur_new') }}">Create new</a>
{% endblock %}
